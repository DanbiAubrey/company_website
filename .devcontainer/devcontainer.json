{
  "name": "Node 22.20.0 via NVM",
  "build": {
    "dockerfile": "Dockerfile",
    "args": { "NODE_VERSION": "22.20.0" }
  },
  "postCreateCommand": "node -v && npm -v && corepack -v",
  "customizations": {
    "vscode": {
      "extensions": ["dbaeumer.vscode-eslint", "esbenp.prettier-vscode"]
    }
  },
  "forwardPorts": [5173],
  "portsAttributes": {
    "5173": { "label": "Vite", "onAutoForward": "openBrowser" }
  },
  "remoteUser": "vscode"
}
